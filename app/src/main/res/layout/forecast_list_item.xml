<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_weather_data"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_item_text_padding"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_view_height"
        android:layout_marginLeft="@dimen/list_item_view_margin_left"
        android:layout_marginRight="@dimen/list_item_view_margin_right"
        android:background="#dadada"/>

</LinearLayout>